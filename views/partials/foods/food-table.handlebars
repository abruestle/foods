<div class="col-md-5 transparent">
    {{#if devoured}}<h4>Eaten</h4>{{else}}<h4>Uneaten</h4>{{/if}}
    <table class="table">
        <thead>
            <tr>
                <th>
                    #
                </th>
                <th>
                    Food
                </th>
                <th>
                    Allergens
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            {{#if devoured}}
                {{#each foods}}
                    {{#if devoured}}
                        {{> foods/food-row devoured=false}}
                    {{/if}}
                {{/each}}
                
            {{!-- foods devoured --}}
            {{else}}
                {{#each foods}}
                    {{#unless devoured}}
                        {{> foods/food-row devoured=true}}
                    {{/unless}}
                {{/each}}
            {{/if}}
            
        </tbody>
    </table>
</div>